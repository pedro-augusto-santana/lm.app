    <script>
        // Get references to all pages
        const loginPage = document.getElementById('loginPage');
        const activityListPage = document.getElementById('activityListPage');
        const activityPage = document.getElementById('activityPage');

        // Get references to navigation buttons
        const navLogin = document.getElementById('navLogin');
        const navActivities = document.getElementById('navActivities');
        const navActivity = document.getElementById('navActivity');

        // Function to hide all pages
        function hideAllPages() {
            loginPage.classList.remove('active');
            activityListPage.classList.remove('active');
            activityPage.classList.remove('active');
        }

        // Function to deactivate all navigation buttons
        function deactivateAllNavButtons() {
            navLogin.classList.remove('active');
            navActivities.classList.remove('active');
            navActivity.classList.remove('active');
        }

        // Function to show a specific page and activate its nav button
        function showPage(pageElement, navButtonElement) {
            hideAllPages();
            deactivateAllNavButtons();
            pageElement.classList.add('active');
            navButtonElement.classList.add('active');
        }

        // Event listeners for navigation buttons
        navLogin.addEventListener('click', () => showPage(loginPage, navLogin));
        navActivities.addEventListener('click', () => showPage(activityListPage, navActivities));
        navActivity.addEventListener('click', () => showPage(activityPage, navActivity));

        // Initialize with the login page active
        document.addEventListener('DOMContentLoaded', () => {
            showPage(loginPage, navLogin);
        });
    </script>
